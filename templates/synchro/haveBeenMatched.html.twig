{% extends 'base.html.twig' %}

{% block title %}Les joueurs qui vous ont matché{% endblock %}

{% block body %}
    <h1 class="text-center">Les joueurs que vous avez matchés !</h1>

    <div class="d-flex flex-wrap">
        {% for match in matchs %}
            <div class="card col-3">
                <img src="{{ asset(images_profil ~ match.joueur1.profilImg) }}" class="card-img-top" alt="image de profil">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">{{ match.joueur1.pseudo }}</h5>
                    <p class="card-text">Niveau de tryhard : {{ match.joueur1.tryhardMeter }}</p>
                    <div>
                        <p>Jeux préférés :</p>
                            <ul>
                                {% for jeu in match.joueur1.jeu %}
                                    <li>{{ jeu.nom }}</li>
                                {% endfor %}
                            </ul>
                    </div>
                    <div>
                        <p>Catégories de jeux préférés :</p>
                            <ul>
                                {% for categorie in match.joueur1.categorie %}
                                    <li>{{ categorie.nom }}</li>
                                {% endfor %}
                            </ul>
                    </div>
                    <div class="text-center">
                        <a href="{{ path('matchingDetail', {'id': match.joueur1.id}) }}" class="btn btn-primary">Voir détail</a>
                    </div>
                </div>
            </div>
        {% endfor %}
	</div>
{% endblock %}